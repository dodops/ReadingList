<div class="row">
  <div class="col-sm-8">
    <br>
    <br>
    <ul class="list-unstyled book-list">
      <%= render partial: 'books/book', collection: @books %>
    </ul>
  </div>
  <div class="col-sm-4">
    <h2>Genres</h2>
    <ul class="list-unstyled">
      <% cache do %>
        <% Genre.all.each do |genre| %>
          <li>
            <%= link_to genre.name, genre_path(genre),
              class: 'label label-primary' %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

